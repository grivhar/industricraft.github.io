import requests
from bs4 import BeautifulSoup
import json

url = "https://industricraft.gamer.gd/launcher_updater/"

headers = {
    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0 Safari/537.36"
}

try:
    response = requests.get(url, headers=headers)
    response.raise_for_status()

    soup = BeautifulSoup(response.text, "html.parser")
    p = soup.find("p")
    if not p:
        raise ValueError("Impossible de trouver le JSON dans la page")

    json_text = p.get_text(separator="\n").strip()
    config = json.loads(json_text)

    print("Version du launcher :", config["version"])
    print("URL des mods :", config["mods"]["url"])
    print("URL NeoForge :", config["neoforge"]["url"])

except requests.exceptions.RequestException as e:
    print("Erreur lors de la récupération de la page :", e)
except (json.JSONDecodeError, ValueError) as e:
    print("Erreur lors du parsing JSON :", e)
